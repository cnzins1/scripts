local function acceptAuras()
    local r = game:GetService("ReplicatedStorage")
    local aurasFolder = r:FindFirstChild("Auras")
    if aurasFolder then
        for _, aura in pairs(aurasFolder:GetChildren()) do
            r.Remotes.AcceptAura:FireServer(aura.Name, true)
        end
    end
end

local c = 0
while true do
    task.wait(0.1)
    game:GetService("ReplicatedStorage").Remotes.ZachRLL:InvokeServer()
    c = c + 1
    if c >= 5 then
        acceptAuras()
        c = 0
    end
end

-- List of specific auras to delete
local aurasToDelete = {
    "Heat", "Flames Curse", "Dark Matter", "Frigid", "Sorcerous", 
    "Starstruck", "Voltage", "Constellar", "Iridescent", "Gale", 
    "Shiver", "Bloom", "Fiend", "Tidal", "Flame", "Frost", 
    "Antimatter", "Numerical", "Orbital", "Moonlit", "Glacial", 
    "Prism", "Nebula", "Cupid"
}

while true do
    wait(0.2)
    local a = "1"
    local b = game:GetService("ReplicatedStorage").Remotes.DeleteAura

    for _, auraName in ipairs(aurasToDelete) do
        b:FireServer(auraName, a)
    end
end
